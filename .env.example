# AWS Bedrock Configuration (for Claude models)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET=caseintel-documents

# Database (Docker PostgreSQL on port 5433)
DATABASE_URL=postgresql://caseintel:caseintel_dev@localhost:5433/caseintel

# API Security
CASEINTEL_API_KEY=your-secure-api-key-here

# Vector Database
CHROMA_PERSIST_DIR=./chroma_db

# Application
ENVIRONMENT=development
LOG_LEVEL=INFO

# ============================================================================
# MODEL CONFIGURATION - DEVELOPMENT (Cost-Effective for Testing)
# ============================================================================
# Using Claude 3.5 Sonnet and Claude 3 Haiku for development
# Same pricing as Claude 4.5 but proven stable models

MODEL_CLASSIFIER=anthropic.claude-3-haiku-20240307-v1:0
MODEL_METADATA=anthropic.claude-3-haiku-20240307-v1:0
MODEL_PRIVILEGE=us.anthropic.claude-3-5-sonnet-20241022-v2:0
MODEL_HOTDOC=us.anthropic.claude-3-5-sonnet-20241022-v2:0
MODEL_CONTENT=us.anthropic.claude-3-5-sonnet-20241022-v2:0
MODEL_CROSSREF=anthropic.claude-3-haiku-20240307-v1:0

# Embedding model for RAG
EMBEDDING_MODEL=amazon.titan-embed-text-v2:0

