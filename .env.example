# CaseIntel AI Agents - Environment Variables
# Copy this file to .env and fill in your values

# Anthropic API
ANTHROPIC_API_KEY=sk-ant-your-key-here

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET=caseintel-documents

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/caseintel

# API Authentication
CASEINTEL_API_KEY=your-secure-random-api-key-here

# Vector Database (ChromaDB)
CHROMA_PERSIST_DIR=./chroma_db

# Optional: Pinecone (alternative to ChromaDB)
# PINECONE_API_KEY=your-pinecone-key
# PINECONE_ENVIRONMENT=us-west1-gcp

# Application
ENVIRONMENT=development  # development or production
PORT=8000

# Logging
LOG_LEVEL=INFO
